<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration debug="false">

	<property name="pattern" value="%date{ISO8601} [%-5level] [%-20.20thread] %-50.50logger{50} | - %msg%n" />

   <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook">
   		<delay>1000</delay>
   </shutdownHook>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                ${pattern}
            </pattern>
            <outputPatternAsHeader>true</outputPatternAsHeader>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${catalina.base}/university.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>1MB</maxFileSize>
            <totalSizeCap>32MB</totalSizeCap>
            <maxHistory>10</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>
                ${pattern}
            </pattern>
        </encoder>
    </appender>

	<logger name="ua.com.foxminded.university.view" level="warn" additivity="false">
		<appender-ref ref="FILE" />
		<appender-ref ref="CONSOLE" />
	</logger>

     <logger name="ua.com.foxminded.university.domain" level="warn" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>
    
     <logger name="ua.com.foxminded.university.dao" level="warn" additivity="false">
    	<appender-ref ref="FILE" />
    	<appender-ref ref="CONSOLE" />
    </logger>
    
     <logger name="org.springframework.web" level="warn" additivity="false">
    	<appender-ref ref="FILE" />
    	<appender-ref ref="CONSOLE" />
    </logger>
    
    <logger name="org.springframework.jdbc.core" level="warn" additivity="false">
    	<appender-ref ref="FILE" />
    	<appender-ref ref="CONSOLE" />
    </logger>
    
    <logger name="ua.com.foxminded.university.service" level="warn" additivity="false">
    	<appender-ref ref="FILE" />
    	<appender-ref ref="CONSOLE" />
    </logger>

    <root level="warn">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>